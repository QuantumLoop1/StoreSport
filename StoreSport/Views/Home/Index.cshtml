@model ProductsListViewModel

<div class="row">
    <div class="col-lg-3 mb-4">
        <div class="card p-3">
 <h6 class="text-muted mb-3">Categories</h6>
            <vc:navigation-menu />
        </div>
  </div>
    <div class="col-lg-9">
        @foreach (var p in Model.Products)
        {
      <div class="card mb-3 p-3">
   <div class="d-flex justify-content-between align-items-start">
       <div>
         <h5 class="mb-1">@p.Name</h5>
      <small class="text-muted">@p.Category</small>
    <p class="text-secondary mt-2 mb-0">@p.Description</p>
       </div>
          <div class="text-end">
  <div class="fs-4 fw-bold text-primary mb-2">@p.Price.ToString("c")</div>
       <form asp-action="AddToCart" asp-controller="Cart" method="post">
 <input type="hidden" name="productId" value="@p.ProductId" />
       <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
      <button type="submit" class="btn btn-dark btn-sm">Add to Cart</button>
     </form>
     </div>
              </div>
         </div>
        }
        
   @if (Model.PagingInfo.TotalPages > 1)
  {
    <div class="d-flex justify-content-center mt-4">
   <div page-model="@Model.PagingInfo" page-action="Index" 
       page-classes-enabled="true"
    page-class="btn btn-sm" page-class-normal="btn-outline-secondary"
        page-class-selected="btn-dark" 
      page-url-category="@Model.CurrentCategory"
           class="btn-group">
     </div>
     </div>
        }
    </div>
</div>
