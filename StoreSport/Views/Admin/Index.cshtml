@model IEnumerable<Product>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Products</h4>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm me-2">Back</a>
        <a asp-action="Create" class="btn btn-dark btn-sm">Add Product</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-secondary">No products yet.</div>
}
else
{
    <div class="card">
  <div class="table-responsive">
      <table class="table table-hover mb-0">
    <thead>
          <tr class="text-muted small">
    <th>ID</th>
    <th>Name</th>
       <th>Category</th>
  <th class="text-end">Price</th>
 <th></th>
         </tr>
     </thead>
     <tbody>
           @foreach (var item in Model)
   {
     <tr>
     <td class="text-muted">@item.ProductId</td>
         <td>@item.Name</td>
     <td><span class="badge bg-light text-dark">@item.Category</span></td>
  <td class="text-end">@item.Price.ToString("c")</td>
    <td class="text-end">
     <a asp-action="Edit" asp-route-productId="@item.ProductId"
     class="btn btn-sm btn-outline-secondary">Edit</a>
     <form asp-action="Delete" method="post" class="d-inline">
      <input type="hidden" name="productId" value="@item.ProductId" />
   <button type="submit" class="btn btn-sm btn-outline-danger"
      onclick="return confirm('Delete this product?')">Delete</button>
   </form>
       </td>
         </tr>
        }
        </tbody>
     </table>
   </div>
    </div>
    <small class="text-muted mt-2 d-block">@Model.Count() products</small>
}
